            android:layout_alignTop="@+id/tile5" android:layout_toRightOf="@+id/tile5" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
            android:id="@+id/tile7"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_alignTop="@+id/tile6" android:layout_toRightOf="@+id/tile6" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
