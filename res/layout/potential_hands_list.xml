<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" android:paddingBottom="5dp">

    <TextView
            android:id="@+id/hand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HERP"
            android:textSize="18sp" android:singleLine="true"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
    </TextView>

    <TextView
        android:id="@+id/hand_chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DERP"
        android:textSize="18sp" android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
    </TextView>

    <ImageView
            android:id="@+id/tile1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_below="@+id/hand_name" android:layout_alignParentLeft="true" android:adjustViewBounds="true"
        android:padding="1dp"
        android:cropToPadding="false">
    </ImageView>

    <ImageView
            android:id="@+id/tile2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_alignTop="@+id/tile1" android:layout_toRightOf="@+id/tile1" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
            android:id="@+id/tile3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_alignTop="@+id/tile2" android:layout_toRightOf="@+id/tile2" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
            android:id="@+id/tile4"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_alignTop="@+id/tile3" android:layout_toRightOf="@+id/tile3" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
            android:id="@+id/tile5"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/blank_tile"
            android:layout_alignTop="@+id/tile4" android:layout_toRightOf="@+id/tile4" android:adjustViewBounds="true"
        android:padding="1dp">
    </ImageView>

    <ImageView
            android:id="@+id/tile6"
            android:layout_width="22dp"
            android:layout_height="22dp"
